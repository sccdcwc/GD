<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="jpaMysql">
        <!-- provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.gd.core.domain.Template</class>
        <class>com.gd.core.domain.Employ</class>
        <class>com.gd.core.domain.Instance</class>
        <class>com.gd.core.domain.Access</class>
    </persistence-unit>

    <persistence-unit name="jpaMysql2" transaction-type="RESOURCE_LOCAL">
        <!-- provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.gd.core.domain.Template</class>
        <class>com.gd.core.domain.Employ</class>
        <class>com.gd.core.domain.Instance</class>
        <class>com.gd.core.domain.Access</class>
        <!-- <exclude-unlisted-classes>false</exclude-unlisted-classes> -->

    </persistence-unit>
</persistence>